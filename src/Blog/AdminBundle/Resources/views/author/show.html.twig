{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}{{ author.name }}{% endblock %}

{% block body %}
    <h1>{{ author.name }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Created at</th>
                <td>{{ author.createdAt | date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated at</th>
                <td>{{ author.updatedAt | date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ author.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('blog_admin_author_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('blog_admin_author_edit', { 'id': author.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
